@model UserRepoProject.Models.AddTopicView


@{
    ViewBag.Title = "AddTopicPage";
}

<h2>AddTopicPage</h2>

@using (Html.BeginForm("AddNew", "AddTopic", FormMethod.Post, new { @Class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(t => t.topic.Title, new { @Class = "control-label" })
        @Html.TextBoxFor(t => t.topic.Title, new { @Class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.topic.Content, new { @Class = "control-label" })
        @Html.TextAreaFor(t => t.topic.Content, new { @Class = "form-control" })
    </div>

    <div class="form-group">
        <select class="form-control" name="selectedUserId" id="selectedUserId">
            @foreach (var user in Model.allUsers)
            {

                <option value="@user.Id">
                    @user.Name &nbsp; @user.lastName
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <input class="btn btn-success" type="submit" value="add Topic" />
    </div>
}

